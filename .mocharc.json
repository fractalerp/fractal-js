{
  "bail": true,
  "diff": true,
  "exit": true,
  "extension": [
    "ts"
  ],
  "full-trace": true,
  "package": "./package.json",
  "recursive": true,
  "reporter": "spec",
  "slow": 75,
  "spec": [
    "components/**/*.spec.ts",
    "tests/**/*.spec.ts"
  ],
  "node-option": [
    "import=tsx"
  ],
  "timeout": 60000,
  "ui": "bdd",
  "watch-files": [
    "lib/**/*.js",
    "test/**/*.js"
  ]
}