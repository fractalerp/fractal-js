{
  "bail": true,
  "diff": true,
  "exit": false,
  "extension": [
    "ts"
  ],
  "full-trace": true,
  "package": "./package.json",
  "recursive": true,
  "reporter": "spec",
  "require": [
    "ts-node/register"
  ],
  "slow": 75,
  "spec": [
    "activerecord/**/*.spec.ts",
    "app/**/*.spec.ts"
  ],
  "timeout": 60000,
  "ui": "bdd",
  "watch-files": [
    "lib/**/*.js",
    "test/**/*.js"
  ]
}